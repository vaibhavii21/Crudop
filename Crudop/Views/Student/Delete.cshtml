@model Crudop.Models.Student;

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Student</h2>
            <hr />
            <div class="mb-3">

                <label>Student Name </label>
                <input asp-for="Name" class="form-control" disabled><br /><br />

                <label>Gender </label>
                <input type="radio" asp-for="Gender" value="male" disabled>
                <label>Male</label>

                <input type="radio" asp-for="Gender" value="female" disabled>
                <label>Female</label><br /><br />

                <label>Age </label>
                <input asp-for="Age" class="form-control" disabled><br /><br />

                <label>Phone Number</label>
                <input asp-for="PhoneNo" class="from-control" disabled><br /><br />

                <label>Birthday</label>
                <input asp-for="Birthday" class="form-control" disabled><br /><br />

            </div>
            <button type="submit" class="btn btn-danger" style="width:300px">Delete</button>

            <a class="navbar-brand fw-bolder btn btn-secondary border" asp-controller="Student" asp-action="Index" style="width:500px">
                Back to list
            </a>

        </div>
    </div>
</form>