

@model List<Crudop.Models.Student>;

 
<div class="container">
    <div class="row pt-4 ">
        <div class="col-6">
            <h2 class="text-primary"> Students List</h2>
            
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Student" asp-action="create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Student
            </a>

        </div>

    </div>
<table class="table table-bordered table-striped">
    <thead>
       <tr>
        <th>Student Name</th>
        <th>Gender</th>
        <th>Age</th>
        <th>PhoneNo</th>
        <th>Birthday</th>

       </tr>
    </thead>
    <tbody>
     @foreach(var obj in Model){
       <tr>
         <td>@obj.Name</td>
         <td>@obj.Gender</td>
         <td>@obj.Age</td>
         <td>@obj.PhoneNo</td>
         <td>@obj.Birthday</td>
         <td>
             <div class="w-20 btn-group" role="group">
                 <a asp-controller="Student" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">
                                <i class="bi bi-pencil-square"></i>Edit
                 </a>
             </div>
             <div class="w-45 btn-group" role="group">
                            <a asp-controller="Student" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                                <i class="bi bi-trash"></i>Delete
                 </a>
              </div>
         </td>
       </tr>
    }
    </tbody>
</table>
</div>